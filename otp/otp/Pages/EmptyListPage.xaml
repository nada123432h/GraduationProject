<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:Res="clr-namespace:otp.Resources"
             NavigationPage.HasNavigationBar="False"
          
             x:Class="otp.Pages.EmptyListPage">
    <ContentPage.Content>
        <StackLayout>
            

            <Image Source="Empty.png" Aspect="AspectFill" VerticalOptions="CenterAndExpand"></Image>
            <Label Text="{Res:Translate Text=txtemptyRequest}" HorizontalTextAlignment="Center" FontFamily="DG" TextColor="#092635" FontAttributes="Bold" ></Label>
            <Button 
    Grid.Row="1"
    Margin="0,10,0,24"
    Command="{Binding GoBackCommand}"
                FontFamily="DG"
    Text="الرجوع"
    VerticalOptions="CenterAndExpand"
                CornerRadius="30"
                HorizontalOptions="CenterAndExpand"
    WidthRequest="245">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#67C6E3" Offset="0" />
                        <GradientStop Color="#DAFFFB" Offset="1" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>